  		DELETE FROM board 
  		WHERE board_number=#{boardNumber} AND password=#{password}
  	</delete>
  	
  	<update id="boardUpdate" parameterType="com.java.board.dto.BoardDto">
  		UPDATE board SET email=#{email}, subject=#{subject}, content=#{content}
